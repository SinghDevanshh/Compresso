{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build and run",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++11", 
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
        ,
        {
            "label": "Run Program",
            "type": "shell",
            "command": "${fileDirname}/${fileBasenameNoExtension}",
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": "C/C++: g++ build and run",
            "problemMatcher": []
        }
    ],
    "version": "2.0.0"
}